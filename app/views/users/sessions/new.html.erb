<div class="col-lg-6 mx-lg-auto">
  <div class="card shadow">
    <div class="card-header">
      <h2 class="card-title text-center"><%=t('.sign_in')%></h2>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label t('.email'), class: 'mb-2' %>
          <%= f.text_field :email, class: "form-control form-control-lg" %>
        </div>

        <div class="form-group">
          <%= f.label t('.password'), class: "mb-2" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group mb-2 mt-2">
            <%= f.check_box :remember_me %>
            <%= f.label t('.remember_me') %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit t('.log_in'), class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>

