<div class="col-lg-6 mx-lg-auto">
  <div class="card shadow">
    <div class="card-header">
      <h2 class="card-title text-center"><%=t('.title')%></h2>
    </div>
    <div class="card-body">
      <%= form_with model: @chat, url: user_chat_path(@chat.user_id, @chat) do |form| %>

        <div class="form-group mb-2">
          <%= form.label t('.name') %>
          <%= form.text_field :name, autofocus: true, class: "form-control form-control-lg" %>
          <% @chat.errors.full_messages_for(:name).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>

        <div class="form-group mb-2">
          <%= form.label t('.id') %>
          <%= form.text_field :chat_id, autofocus: true, class: "form-control form-control-lg" %>
          <% @chat.errors.full_messages_for(:chat_id).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>

        <div class="actions">
          <%= form.submit t('.chat'), class: "btn btn-lg btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>