<!DOCTYPE html>
<html>
  <head>
    <title>Germes</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <p><%=t '.name'%></p>

    <% if I18n.locale == :ru %>
      <%= link_to t('.eng'), { :locale=>'en' } %>
    <% else %>
      <%= link_to t('.rus'), { :locale=>'ru' } %>
    <%end%>

    
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <% if user_signed_in? %>
      <li><%= link_to t('.sign_out'), destroy_user_session_path, data: { turbo_method: :delete } %></li>
    <% else %>
      <li><%= link_to t('.sign_in'), new_user_session_path %></li>
      <li><%= link_to t('.sign_up'), new_user_registration_path %></li>
    <% end %>
    <%= yield %>
  </body>
</html>
