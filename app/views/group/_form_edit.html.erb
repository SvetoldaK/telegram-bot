<div class="col-lg-6 mx-lg-auto">
  <div class="card shadow">
    <div class="card-header">
      <h2 class="card-title text-center"><%=t('.title')%></h2>
    </div>
    <div class="card-body">
      <%= form_with model: @group, url: user_chat_group_path(current_user.id, chat.id, @group.id) do |form| %>

        <% if @group.errors.any? %>
          <div style="color: red">
            <ul>
              <% @group.errors.each do |error|%>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        
        <div class="field">
          <%= form.hidden_field :chat_id, value: chat.id %>
        </div>

        <div class="form-group mb-2">
          <%= form.label t('.name') %>
          <%= form.text_field :name, autofocus: true, class: "form-control form-control-lg" %>
          <% @chat.errors.full_messages_for(:name).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>

        <div class="form-group mb-2">
          <%= form.label t('.nickname') %>
          <%= form.text_field :nickname, autofocus: true, class: "form-control form-control-lg" %>
          <% @chat.errors.full_messages_for(:nickname).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>

        <div class="actions">
          <%= form.submit t('.group'), class: "btn btn-lg btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>